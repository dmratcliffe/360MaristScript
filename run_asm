USER=
PASSWORD=

echo Logging in and starting job...

ftp -nv zos.kctr.marist.edu > ./out <<EOF
user $USER $PASSWORD
quote site filetype=jes
put $1
quit
EOF

JOB=$(cat ./out | grep -oP '(JOB[0-9])\w+' | head -1)

echo Job created! ID is $JOB

echo Let\'s give it a sec to run...
sleep 2

ftp -nv zos.kctr.marist.edu >> ./out <<EOF
user $USER $PASSWORD
quote site filetype=jes
get $JOB
delete $JOB
quit
EOF

cat ./$JOB > $1-out.txt

rm -rf ./$JOB ./out

echo Done.
